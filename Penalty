<body>

  <h1>‚öΩ Penalty Shootout</h1>
  <div class="goal-area">
    <div id="keeper" class="keeper" style="left: 120px;"></div>
  </div>

  <div class="player"></div>
  <div class="ball"></div>

  <div class="buttons">
    <button onclick="shoot('left')">‚¨Ö Left</button>
    <button onclick="shoot('center')">‚¨Ü Center</button>
    <button onclick="shoot('right')">‚û° Right</button>
  </div>

  <div id="result" style="font-size: 22px; margin-top: 10px;"></div>
  <div id="score">Gols: 0</div>
  <div id="money">üí∞ Coins: 0</div>

  <script>
    let gols = 0;
    let coins = 0;

    function shoot(direction) {
      const keeper = document.getElementById('keeper');
      const result = document.getElementById('result');

      // Move keeper randomly
      const options = ['left', 'center', 'right'];
      const keeperChoice = options[Math.floor(Math.random() * 3)];

      if (keeperChoice === 'left') keeper.style.left = '20px';
      else if (keeperChoice === 'center') keeper.style.left = '120px';
      else keeper.style.left = '220px';

      if (direction === keeperChoice) {
        result.textContent = "‚ùå Saved! No Goal!";
      } else {
        result.textContent = "‚úÖ Goal!";
        gols++;
        coins += 10;
      }

      document.getElementById('score').textContent = "Gols: " + gols;
      document.getElementById('money').textContent = "üí∞ Coins: " + coins;
    }
  </script>

